<% if login? %>
  <h2>Hello <%= session[:username] %></h2>
<% else %>

    <div class="row">

      <div class="login col-md-6">
        <h2>login</h2>
        <form method='post' action='/' class="form-horizontal">
          <div class="form-group form-group-sm">
            <label for="login-username" class="control-label">Username</label>
            <input id="login-username" type="text" name='username'>
          </div>      
          
          <div class="form-group form-group-sm">
            <label for="login-password" class="control-label">Password</label>
            <input id="login-password" type="password" name='password'>
          </div>
          <input type="submit">
        </form>
      </div>

      <div class="signup col-md-6">
        <h2>signup</h2>
        <form method='post' action='/signup' class="form-horizontal">
          <div class="form-group form-group-sm">
            <label for="signup-username" class="control-label">Username</label>
            <input id="signup-username" type="text" name='username'>
          </div>
          <div class="form-group form-group-sm">
            <label for="signup-email" class="control-label">Email</label>
            <input id="signup-email" type="email" name='email'>
          </div>
          <div class="form-group form-group-sm">
            <label for="signup-password" class="control-label">Password</label>
            <input id="signup-password" type="password" name='password'>
          </div>
          <input type="submit">
        </form>
      </div>
    </div>

<% end %>
